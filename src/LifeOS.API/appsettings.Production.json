{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "LifeOSPostgreConnectionString": "",
    "RedisCache": ""
  },

  "TokenOptions": {
    "Audience": "",
    "Issuer": "",
    "AccessTokenExpiration": 60,
    "RefreshTokenExpirationDays": 14,
    "SecurityKey": ""
  },

  "PasswordResetOptions": {
    "BaseUrl": ""
  },


  "ImageStorage": {
    "RootPath": "wwwroot/uploads",
    "RequestPath": "/uploads",
    "MaxFileSizeMb": 5,
    "DefaultScope": "general",
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".webp"],
    "AllowedContentTypes": ["image/jpeg", "image/png", "image/webp"],
    "DefaultMaxWidth": 1600,
    "DefaultMaxHeight": 1600
  },

  "Cors": {
    "AllowedOrigins": []
  },

  "Serilog": {
    "SeqUrl": "http://seq:80",
    "SeqApiKey": null
  },

  "EmailOptions": {
    "Host": "smtp.gmail.com",
    "Port": 587
  }
}
